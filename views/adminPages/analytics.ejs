<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin-styles.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="text-center mb-4">
                    <img src="https://via.placeholder.com/50" alt="Logo" class="rounded-circle mb-3">
                    <h4 class="text-white">Soronara</h4>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link " href="/admin-panel">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/adminproductsPage">
                            <i class="fas fa-box me-2"></i> Products
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/adminOrdersPage">
                            <i class="fas fa-shopping-cart me-2"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/adminCustomersPage">
                            <i class="fas fa-users me-2"></i> Customers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/adminAnalyticsPage">
                            <i class="fas fa-chart-bar me-2"></i> Analytics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/adminSettingsPage">
                            <i class="fas fa-cog me-2"></i> Settings
                        </a>
                    </li>
                    <!-- Replace the existing logout nav-item with this -->
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </li>

                </ul>
            </nav>
         <!-- Logout Modal -->
            <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center pb-4">
                            <i class="fas fa-sign-out-alt fa-4x mb-3" style="color: #4e73df;"></i>
                            <h4 class="modal-title mb-3" id="logoutModalLabel">Ready to Leave?</h4>
                            <p class="text-muted">Select "Logout" below if you are ready to end your current session.</p>
                            <div class="mt-4">
                                <button type="button" class="btn btn-secondary me-2 px-4" data-bs-dismiss="modal">Cancel</button>
                                <a href="/" class="btn btn-primary px-4">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-10 main-content">
                <!-- Header Section -->
                <div class="profile-section d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/40" alt="Admin" class="rounded-circle me-3">
                        <h5 class="mb-0">Analytics Dashboard</h5>
                    </div>
                    <div class="d-flex gap-3">
                        <select class="form-select">
                            <option>Last 7 Days</option>
                            <option>Last 30 Days</option>
                            <option>Last 3 Months</option>
                            <option>Last Year</option>
                        </select>
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-download me-2"></i>Export Report
                        </button>
                    </div>
                </div>

                <!-- Key Metrics -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-primary fw-bold">TOTAL REVENUE</h6>
                                        <h2 class="mb-0">$54,230</h2>
                                        <p class="text-success mb-0"><i class="fas fa-arrow-up me-1"></i>8.3%</p>
                                    </div>
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-success fw-bold">CONVERSION RATE</h6>
                                        <h2 class="mb-0">3.45%</h2>
                                        <p class="text-danger mb-0"><i class="fas fa-arrow-down me-1"></i>1.2%</p>
                                    </div>
                                    <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-info fw-bold">AVG. ORDER VALUE</h6>
                                        <h2 class="mb-0">$86.5</h2>
                                        <p class="text-success mb-0"><i class="fas fa-arrow-up me-1"></i>4.2%</p>
                                    </div>
                                    <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-warning fw-bold">TOTAL VISITORS</h6>
                                        <h2 class="mb-0">14,234</h2>
                                        <p class="text-success mb-0"><i class="fas fa-arrow-up me-1"></i>12.5%</p>
                                    </div>
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Section -->
                <div class="row mb-4">
                    <div class="col-xl-8 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Revenue Overview</h5>
                                <canvas id="revenueChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Sales by Category</h5>
                                <canvas id="categoryChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detailed Analytics -->
                <div class="row">
                    <div class="col-xl-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Top Products</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Sales</th>
                                                <th>Revenue</th>
                                                <th>Growth</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Product A</td>
                                                <td>234</td>
                                                <td>$12,340</td>
                                                <td><span class="text-success">+12%</span></td>
                                            </tr>
                                            <!-- Add more rows -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Customer Demographics</h5>
                                <canvas id="demographicsChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Traffic Sources -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Traffic Sources</h5>
                        <div class="row">
                            <div class="col-md-8">
                                <canvas id="trafficChart" height="200"></canvas>
                            </div>
                            <div class="col-md-4">
                                <div class="traffic-stats">
                                    <div class="mb-3">
                                        <h6>Direct</h6>
                                        <div class="progress">
                                            <div class="progress-bar" style="width: 35%"></div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <h6>Social Media</h6>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" style="width: 28%"></div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <h6>Referral</h6>
                                        <div class="progress">
                                            <div class="progress-bar bg-info" style="width: 25%"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue Chart
        new Chart(document.getElementById('revenueChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Revenue',
                    data: [12000, 19000, 15000, 25000, 22000, 30000],
                    borderColor: '#4e73df',
                    tension: 0.1
                }]
            }
        });

        // Category Chart
        new Chart(document.getElementById('categoryChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: ['Electronics', 'Clothing', 'Food', 'Books'],
                datasets: [{
                    data: [30, 25, 20, 25],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e']
                }]
            }
        });

        // Demographics Chart
        new Chart(document.getElementById('demographicsChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: ['18-24', '25-34', '35-44', '45-54', '55+'],
                datasets: [{
                    label: 'Age Distribution',
                    data: [15, 30, 25, 18, 12],
                    backgroundColor: '#4e73df'
                }]
            }
        });

        // Traffic Chart
        new Chart(document.getElementById('trafficChart').getContext('2d'), {
            type: 'pie',
            data: {
                labels: ['Direct', 'Social Media', 'Referral', 'Organic'],
                datasets: [{
                    data: [35, 28, 25, 12],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e']
                }]
            }
        });
    </script>
</body>
</html>
