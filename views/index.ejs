<style>
    
    .product-card{
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        border-radius: 6px;
        overflow: hidden;
        position: relative;
        height: 400px;
        padding-inline: 1.1rem;
        transition: all .5s ease;
        &:hover{
            box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px;
            transform: scale(1.05);
        }
    
    }
    .product-image{
        width: 200px;
        height: 180px;
        margin:10px auto;
        margin-bottom: 20px;
    }
    .product-card:hover img{
        transform: scale(1.1);
        
    }
    .product-card img{
        width: 100%;
        object-fit: contain;
        transition: all .5s ease;
    }
    .product-card p{
        margin: 0;
        font-size: 13px;
    }
    .product-card .product-name{
        font-size: 16px;
        text-transform: capitalize;
    }
    .btn-primary{
        position: absolute;
        bottom: 20px;
        display: block;
        right: 30%;
        background-color:white !important;
        outline: none !important;
        color: black !important;
        font-family: 'Montserrat', sans-serif !important;
        border: thin solid orange !important;
    }
    .product-card .discounted-price-percent{
        position: absolute;
        right: 0;
        top: 10px;
        background-color: orange;
        color: green !important;
    }
    .product-card strong{
        color: black !important;
    }
   .product-grid{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-gap: 10px;
    padding-block: 4rem;
    padding-inline: 2rem;
    font-family: 'Montserrat', sans-serif !important;
    font-size: 13px !important;
   }

.swiper-container {
    width: 100%;
    height: 60vh;
    position: relative;
    margin: 10px auto;
    overflow: hidden;
    margin-top: 50px !important;
}

.swiper-slide  img{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.swiper-button-prev,.swiper-button-next{
    color: orange;
}


@media screen and (max-width:1024px) {
    .swiper-container {
        height: 26vh;
    }
    
}
h5{
    font-size: 10px;
}
.write-up{
    position: absolute;
    top: 0;
