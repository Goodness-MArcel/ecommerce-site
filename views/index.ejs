<script>

var swiper = new Swiper('.swiper-container', {
    slidesPerView: 1,
    spaceBetween: 10,
    navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
    },
    autoplay: {
    delay: 7000,
    },
    pagination: {
        el: '.swiper-pagination',
        clickable: true,
    },
});
    

    document.addEventListener('DOMContentLoaded', function () {
    const specialOfferContainer = document.querySelector('.display-secialOffer');

    // Function to load discounted products into the special offer section
    async function loadDiscountedProducts() {
        try {
            const response = await fetch('/admin/display-discountedProducts');
            const data = await response.json();

            let productCards = `<div class="product-grid">`;
                console.log(data);

            data.products.forEach(product => {
                const price = parseFloat(product.price);  // Ensure price is a number
                const discountedPrice = price - (price * (product.discount / 100));

                productCards += `
                    <div class="product-card border" >
                        <div class="product-image"><img src="${product.image_url}" alt="${product.name}" class="product-image"></div>
                        <h5 class="product-name">${product.name}</h5>
                        <p class="discounted-price-percent"> -${product.discount}%</p>
                        <p class="discounted-price"><strong>₦${discountedPrice.toFixed(2)}</strong></p>
                        <p class="original-price"><del>₦${price.toFixed(2)}</del></p>
                        <a href="/products/${product.product_id}" class="btn btn-primary">View Product</a>
                    </div>
                `;
            });

            productCards += '</div>';  // Close product grid

            specialOfferContainer.innerHTML = productCards;
        } catch (error) {
            console.error('Error fetching discounted products:', error);
            specialOfferContainer.innerHTML = '<p>Error loading discounted products. Please try again.</p>';
        }
    }

    // Automatically load discounted products when the index page loads
    loadDiscountedProducts();
});


AOS.init(
    {
        once: false,
        duration: 1000,
        easing: 'ease-in-out',
        mirror: true,
    }
 );


  


    
</script>
